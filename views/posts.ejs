<%- include("partials/header"); %>
<div class="container">
	<div class="row my-4">
		<% posts.forEach(function(post){ %>
			<div class="col-md-3 col-sm-6">
				<div class="card my-4">
					<img src="<%= post.image %>" class="card-img-top">
					<div class="card-body">
						<h4 class="card-title"><%= post.title %></h4>
						<p class="card-subtitle"><small><em>&mdash;&nbsp;&nbsp;<%= post.author.username %></em></small></p>
						<p class="card-text text-truncate"><%= post.text %></p>
						<a href="/posts/<%= post._id %>" class="btn btn-outline-light">Read More</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>	
</div>
<%- include("partials/footer"); %>