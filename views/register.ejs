<%- include("partials/header"); %>
<div class="container auth-form">
	<h1 class="text-center">Sign-Up</h1>
	<form class="form-group" action="/register" method="POST">
		<input class="form-control my-4" type="text" name="username" placeholder="Username">
		<input class="form-control my-4" type="password" name="password" placeholder="Password">
		<button class="btn btn-lg btn-outline-primary">Sign-Up</button>
		<p>By signing up, you agree to our <a href="/terms">terms and data policy</a>.</p>
	</form>
	<p>Have an account? <a href="/login">Log in</a></p>
</div>
<%- include("partials/footer"); %>